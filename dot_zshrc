
# homebrew
export HOMEBREW_NO_ENV_HINTS=true
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# oh-my-posh
export OMP_CONFIG="$HOME/.config/oh-my-posh/jersh.omp.yml"
export PS1_USER=$(whoami)
export PS1_HOST=$(hostname)
eval "$(oh-my-posh init zsh --config "$OMP_CONFIG")"

# zoxide & fzf
eval "$(zoxide init zsh)"
eval "$(fzf --zsh)"

# Chezmoi Changes
export EDITOR="code --wait"

# load .zsh_aliases and .zsh_functions
if [ -e $HOME/.zsh_aliases ]; then
  source $HOME/.zsh_aliases
fi

if [ -e $HOME/.zsh_functions ]; then
  source $HOME/.zsh_functions
fi

# mkdocs path
export PATH=$PATH:/home/jershops/.local/bin

