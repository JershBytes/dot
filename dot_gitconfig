	path = ~/.git/gitconfig-github

[includeIf "gitdir:~/Code/Gitlab/"]
	path = ~/.git/gitconfig-gitlab

[alias]
	i = init
	s = status
	a  = add
	c  = commit
	ac = commit -am
	cl = clone
	co = checkout
	pl = pull
	ph = push
    so = remote set-url origin
	cob = checkout -b

[core]
	eol = lf
	autocrlf = input
	editor = code --wait

[init]
	defaultBranch = main

[web]
	browser = firefox

[program]
	pgp = /usr/bin/gpg

[commit]
	template = ~/.gitmessage
