[includeIf "gitdir:~/code/github/"]
  	path = .gitconfig-github
[includeIf "gitdir:~/code/gitea/"]
  	path = .gitconfig-gitea
[includeIf "gitdir:~/.local/share/chezmoi/"]
  	path = .gitconfig-github

[alias]
	s = status
	a  = add
	ac = commit -am
	cl = clone
	co = checkout
	pl = pull
	ph = push
	cob = checkout -b
	com = commit -m

[core]
	eol = lf
	autocrlf = input

[init]
	defaultBranch = main

[web]
	browser = firefox



[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
